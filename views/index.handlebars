<div class="container-fluid article-container">
    {{#each data}}
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="card">
                <div class="card-header">
                    <h3>
                        <a class="article-link" target="_blank" rel="noopener noreferrer" href={{link}}>{{title}}</a>
                        <a data-id={{_id}} class="btn btn-outline-success save">Save Article</a>
                    </h3>
                </div>
                <div class="card-body">
                    <h2>{{summary}}</h2>
                </div>
            </div>
        </div>
    </div>
    <br>
    {{/each}}

    {{#unless data}}
    <div class='alert alert-warning text-center'>
        <h4>No articles found or scraped.</h4>
    </div>
    {{/unless}}

</div>
